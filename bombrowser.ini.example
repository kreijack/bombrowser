[BOMBROWSER]
#db=sqlite
db=sqlserver
#db=mariadb
#db=postgresql
description_force_uppercase=1
code_force_uppercase=1

# the name of gvalN (n=1..8) fields separated by comma
# it is allowed to have less than 8 fields
gvalnames=Supplier#1 PN,Supplier#1 name,Manufacturer#1 PN,Manufacturer#1 name,Manufacturer#2 PN,Manufacturer#2 name
genericnames=

[SQLITE]
path=database.sqlite

[SQLSERVER]
server   = tcp:127.0.0.1
database = bombrowser
username = bombrowserUser
password = bombrowserPassword1.
driver   = ODBC Driver 17 for SQL Server

